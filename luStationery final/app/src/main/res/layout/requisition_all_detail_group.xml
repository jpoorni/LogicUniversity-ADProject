<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp" >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:id="@+id/line1"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/date_Icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/info_icon" />
    <TextView
        android:id="@+id/textViewReqId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_alignParentTop="true"
        android:paddingLeft="10dp"
        android:textSize="15dp" />

    <ImageView
        android:id="@+id/req_cal"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="65dp"
        android:src="@drawable/calender1" />
    <TextView
        android:id="@+id/req_Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_alignParentTop="true"
        android:paddingLeft="10dp"
        android:textSize="15dp" />

</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:id="@+id/line2"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/reqTotalQtyImg"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/status_icon" />

        <TextView
            android:id="@+id/reqStatus"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_alignParentTop="true"
            android:paddingLeft="10dp"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/EmpImg"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/person" />
        <TextView
            android:id="@+id/EmpName"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_alignParentTop="true"
            android:paddingLeft="10dp"
            android:textSize="15dp" />

    </LinearLayout>


</LinearLayout>