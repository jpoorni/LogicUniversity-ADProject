<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="189dp"
        android:layout_height="225dp"
        android:id="@+id/imageView3"
        android:background="#fbe4e4"
        android:layout_centerHorizontal="true" />
        <!--android:layout_gravity="left|center_horizontal"/>-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/textViewItemDesc"
        android:layout_below="@+id/imageView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:textColor="#044efa"
        android:textSize="25dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="UOM"
        android:id="@+id/textViewUOMdes"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:layout_below="@+id/textViewItemDesc"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textViewUOM"
        android:layout_below="@+id/textViewItemDesc"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Quantity"
        android:id="@+id/textViewQty"
        android:layout_below="@+id/textViewUOMdes"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editTextQty"
        android:maxLength="4"
        android:layout_below="@+id/textViewQty"
        android:layout_centerHorizontal="true"
        android:imeOptions="actionDone"
        android:textAlignment="center"
        />



